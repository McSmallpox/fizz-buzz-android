<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="TallyStyle" parent ="AppTheme">
    <item name="android:textSize">20dp</item>
  </style>

  <style name="ActiveCorrectStyle" parent="TallyStyle">
    <item name="android:textColor">#0000C0</item>
  </style>

  <style name="PassiveCorrectStyle" parent="TallyStyle">
  <item name="android:textColor">#000000</item>
  </style>style>

  <style name="IncorrectStyle" parent="TallyStyle">
  <item name="android:textColor">#AA0000</item>
  </style>style

  <style name="NumberStyle" parent="AppTheme">
  <item name="android:textSize">120sp</item>
  <item name="android:textColor">@color/numberColor</item>
</style>
</resources>
